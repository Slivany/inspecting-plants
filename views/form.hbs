<h1 class="textCenter">{{title}}</h1>
<form method="POST" action="/plants" id="plantForm">
  <div>
    <div id="statePlant-feedback" class="feedback"></div>
    <label for="statePlant">State of plant:</label>
    <select id="statePlant" name="statePlant">
      <option value="1">1 - Quite dead</option>
      <option value="2">2 - Deteriorating</option>
      <option value="3">3 - In danger</option>
      <option value="4">4 - Good</option>
      <option value="5">5 - Doing very well</option>
      <option value="">Invalid value</option>
    </select>
  </div>
  <div>
    <div id="workerID-feedback" class="feedback"></div>
    <label for="workerID">Worker ID:</label> 
    <input type="number" id="workerID" name="workerID"></input>
  </div>
  <div>
    <label for="temperature">Temperature</label>
    <input type="text" id="temperature" name="temperature" value="{{temperature}}" readonly>
  </div>
  <div>
    <label for="humidity">Humidity</label>
    <input type="text" id="humidity" name="humidity" value="{{humidity}}" readonly>
  </div>
  <div>
    <label for="dateTime">Date and time</label>
    <input type="datetime-local" id="dateTime" name="dateTime" value="{{dateTime}}" readonly>
  </div>
  <div>
    <button type="submit">Submit</button>
  </div>
</form>